<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="collective.charcount">

  <five:registerPackage package="." initialize=".initialize" />

  <genericsetup:registerProfile
      name="default"
      title="collective.charcount"
      directory="profiles/default"
      description="Installs the collective.charcount package"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      />

  <browser:resourceDirectory
    name="collective.charcount"
    directory="resources"
    />

  <genericsetup:upgradeStep
      source="*"
      destination="1000"
      title="Cook resources"
      description=""
      profile="collective.charcount:default"
      handler=".upgrades.cookResources"
      />

</configure>
